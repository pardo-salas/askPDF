---
import Layout from "../layouts/Layout.astro";
import App from "../components/App.vue";
---

<Layout title="Chat with PDF">
  <div
    class="absolute inset-0 -z-10 h-full w-full bg-white bg-[linear-gradient(to_right,#f0f0f0_1px,transparent_1px),linear-gradient(to_bottom,#f0f0f0_1px,transparent_1px)] bg-[size:6rem_4rem]"
  >
  </div>
  <main class="grid place-content-center min-h-screen min-w-screen">
    <h1 class="text-6xl font-bold text-center pb-10 text-cyan-800">
      Chat with your PDF
    </h1>
    <section class="container w-[1000px] max-w-xl h-64">
      <App client:idle />
    </section>
  </main>
</Layout>

